toaster-container(toaster-options="{'time-out': 3000, 'close-button':true, 'position-class': 'toast-bottom-right'}")
div.container.sections-wrapper
	div.secondary.col-md-4.col-sm-12.col-xs-12.pull-right
		aside.skills.aside.section.col-md-12.col-sm-6
			div.section-inner
				include ./partials/levelSummary.jade

		aside.skills.aside.section.col-md-12.col-sm-6
			div.section-inner
				include ./partials/competencyDistribution.jade

	div.primary.col-md-8.col-sm-12.col-xs-12
		section.section
			div.section-inner
				div.row
					div.col-md-4.col-sm-12.col-xs-12
						h2.heading Objectives
					div.col-md-4.col-sm-12.col-xs-12
						div.form-group
							select.form-control(data-ng-model="vm.sort" name="sort")
								option(value="" label="Default Sort")
								option(value="-isMet" label="prioritize met")
								option(value="isMet" label="prioritize not met")
					div.col-md-4.col-sm-12.col-xs-12
						div.form-group
							a.btn.btn-default(href="" data-ng-click="vm.clearAll()")
								|Clear all answers
				div.content
					div.row
						div.col-md-12.col-sm-12.col-xs-12
							div.panel(data-ng-repeat="objective in vm.objectives | orderBy: vm.sort" data-ng-class="objective.isMet ? 'panel-success' : 'panel-danger'")
								include ./partials/objective.jade
